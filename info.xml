<?xml version="1.0"?>
<extension key="eu.tttp.group2summary" type="module">
  <file>group2summary</file>
  <name>Display the groups in the contact summary</name>
  <description>You like how tags are displayed in the contact summary? this extension does the same, for groups. You can also add the contact to a group from the summary (click on the Groups label)</description>
  <license>aGPL3</license>
<urls><url desc="Main Extension Page">http://github.com/TechToThePeople/group2summary</url><url desc="Documentation">http://github.com/TechToThePeople/group2summary</url><url desc="Support">http://forum.civicrm.org</url><url desc="Licensing">http://civicrm.org/licensing</url></urls>


  <maintainer>
    <author>xavier dutoit</author>
    <email>xavier@tttp.eu</email>
  </maintainer>
  <version>1.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>4.3</ver>
    <ver>4.4</ver>
    <ver>4.5</ver>
    <ver>4.6</ver>
    <ver>4.7</ver>
  </compatibility>
  <civix>
    <namespace>CRM/Group2summary</namespace>
  </civix>
</extension>
